# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
continuation_indent_size = 4

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{kt,kts}]

# TODO: set this properly to 100 once ktlint doesn't crash...
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
